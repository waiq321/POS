@model ERPApp.Core.ERPAdminViewModels.ItemCatageoryViewModel
@{
    Layout = null;
}

    @using (Html.BeginForm("AddorEdit", "AdminItems", FormMethod.Post, new { onsubmit = "return SaveForm(this)" }))
{
    <div class="form-horizontal">
        
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" })

                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
            
        </div>

        <div class="form-group">
            @Html.Label("Type Name", htmlAttributes: new { @class = "control-label col-sm-2" })

            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.ItemTypeID, new SelectList(Model._itemTypes, "Value", "Text"), htmlAttributes: new { @class = "form-control" })                
            </div>

        </div>
        <div class="text-center">
            <button id="btn" class="btn btn-danger" type="submit">Save</button>
        </div>
    </div>
}
