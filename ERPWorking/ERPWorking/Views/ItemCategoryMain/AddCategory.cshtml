@model ERPApp.Infrastructure.ViewModels.ItemCategoryMainViewModel

@{
    Layout = null;
}

   @using (Html.BeginForm("AddCategory", "ItemCategoryMain", FormMethod.Post, new { onsubmit = "return SaveForm(this)" }))
   {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>ItemCategoryMain</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName)
                    @Html.ValidationMessageFor(model => model.CategoryName)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Abb, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Abb)
                    @Html.ValidationMessageFor(model => model.Abb)

                    @Html.HiddenFor(X => X.CategoryId)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
  
